{
    "compilerOptions": {
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "module": "NodeNext",
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": false,
        "rootDir": "./src",
        "outDir": "./lib",
        "baseUrl": ".",
        "paths": {
            "jsonld": [
                "types/jsonld.d.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "lib",
        "test",
        "src/old"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}